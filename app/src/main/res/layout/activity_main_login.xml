<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationX="40dp"
        android:translationY="250dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:text="비밀번호"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationX="-40dp"
        android:translationY="325dp" />

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:animateLayoutChanges="false"
        android:background="#6DF870"
        android:translationX="-50dp"
        android:translationY="240dp">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:animateLayoutChanges="false"
            android:background="#FFFFFF"
            android:translationX="8dp"
            android:translationY="10dp">

            <EditText
                android:id="@+id/et_id"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="@string/hint_id"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:animateLayoutChanges="false"
        android:background="#6DF870"
        android:translationX="-230dp"
        android:translationY="315dp">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:animateLayoutChanges="false"
            android:background="#FFFFFF"
            android:translationX="8dp"
            android:translationY="10dp">

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="@string/hint_pass"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </FrameLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:backgroundTint="#6DF870"
        android:includeFontPadding="true"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="15sp"
        android:translationX="-220dp"
        android:translationY="320dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:backgroundTint="#6DF870"
        android:fontFamily="@font/archivo_black"
        android:includeFontPadding="true"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="18sp"
        android:translationX="-455dp"
        android:translationY="420dp" />


</LinearLayout>