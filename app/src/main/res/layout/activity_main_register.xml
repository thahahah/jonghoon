<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6DF870">

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="#6DF870"
        android:translationX="120dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="회원가입"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="아이디"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationX="-130dp"
        android:translationY="230dp" />

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:animateLayoutChanges="false"
        android:background="#6DF870"
        android:translationX="-120dp"
        android:translationY="220dp">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:animateLayoutChanges="false"
            android:background="#FFFFFF"
            android:translationX="8dp"
            android:translationY="10dp">\

            <EditText
                android:id="@+id/reg_id"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="@string/hint_id"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:text="비밀번호"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationX="-380dp"
        android:translationY="310dp" />

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:animateLayoutChanges="false"
        android:background="#6DF870"
        android:translationX="-387dp"
        android:translationY="305dp">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:animateLayoutChanges="false"
            android:background="#FFFFFF"
            android:translationX="8dp"
            android:translationY="10dp">

            <EditText
                android:id="@+id/reg_pass"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="@string/hint_pass"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:text="닉네임"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationX="-640dp"
        android:translationY="400dp" />

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:animateLayoutChanges="false"
        android:background="#6DF870"
        android:translationX="-640dp"
        android:translationY="395dp">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:animateLayoutChanges="false"
            android:background="#FFFFFF"
            android:translationX="8dp"
            android:translationY="10dp">

            <EditText
                android:id="@+id/reg_nickcname"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="@string/hint_nickname"
                android:inputType="textCapWords"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </FrameLayout>

    </FrameLayout>

    <Button
        android:id="@+id/register_confirm"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:backgroundTint="#6DF870"
        android:text="회원가입 하기"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:translationX="-830dp"
        android:translationY="500dp" />

</LinearLayout>